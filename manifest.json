{
  "manifest_version": 3,
  "name": "Galixent",
  "version": "1.0.0",
  "description": "Regional Language AI Browser Assistant",
  "permissions": ["activeTab", "scripting", "storage", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Open Galixent Assistant"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  }
}
